<?xml version="1.0" encoding="UTF-8" ?>
 <!DOCTYPE configuration 
 PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- 引用外部文件 -->
	<properties resource="db.properties" />

	<!-- 配置实体类别名，简化sql映射xml文件的引用 -->
	<typeAliases>
		<!-- <typeAlias type="mybatis.User" alias="_User"/> -->
		<!-- 省略包名 -->
		<package name="com.zfk.mybatis" />
	</typeAliases>

	<!-- 1.数据库配置 development:开发模式 work：工作模式 -->
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<!-- <property name="driver" value="oracle.jdbc.OracleDriver"/> -->
				<!-- <property name="url" value="jdbc:oracle:thin:@localhost:1521:orcl"/> -->
				<!-- <property name="username" value="zfk"/> -->
				<!-- <property name="password" value="zfk"/> -->
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>
	</environments>

	<!-- 2.映射文件 -->
	<mappers>
		<!-- 2.1 配置文件方式 -->
		<mapper resource="com/zfk/mybatis/UserMapper.xml" />

		<!-- 2.2 类方式 这里不能与UserMapper.xml中的namespace同名 -->
		<mapper class="com.zfk.mybatis.UserMapper2" />

		<mapper resource="com/zfk/mybatis/BookMapper.xml" />
	</mappers>
</configuration>